<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="games_register.list">
      <field name="name">games_register list</field>
      <field name="model">games_register.manager</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="value"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="games_register.action_window">
      <field name="name">games_register window</field>
      <field name="res_model">games_register.manager</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
  
    <record model="ir.actions.server" id="games_register.action_server">
      <field name="name">games_register server</field>
      <field name="model_id" ref="model_games_register_games_register"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->
    <menuitem name="games_register" id="games_register.menu_root"/>

    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="games_register.menu_1" parent="games_register.menu_root"/>

    <menuitem name="List" id="games_register.menu_1_list" parent="games_register.menu_1"
              action="games_register.action_window"/>
    <!--
    <menuitem name="Menu 2" id="games_register.menu_2" parent="games_register.menu_root"/>
    -->
    <!-- actions -->
    <!--
    <menuitem name="List" id="games_register.menu_1_list" parent="games_register.menu_1"
              action="games_register.action_window"/>
    <menuitem name="Server to list" id="games_register" parent="games_register.menu_2"
              action="games_register.action_server"/>
    -->
  </data>
</odoo>